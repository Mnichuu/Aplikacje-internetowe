<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Lista przetargów</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
<%- include('partials/nav') %>
<div class="container mt-5">
    <h2 class="text-center">Lista trwających przetargów</h2>
    <% if (tenders.length === 0) { %>
        <div class="alert alert-info text-center mt-4" role="alert">
            Brak trwających przetargów.
        </div>
    <% } else { %>
        <table class="table table-striped mt-4">
            <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Nazwa</th>
                <th>Data rozpoczęcia</th>
                <th>Data zakończenia</th>
                <th>Akcja</th>
            </tr>
            </thead>
            <tbody>
            <% tenders.forEach((t, i) => { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><a href="/tenders/<%= t.id %>"><%= t.title %></a></td>
                    <td><%= new Date(t.start_time).toLocaleString() %></td>
                    <td><%= new Date(t.deadline).toLocaleString() %></td>
                    <td><a href="/tenders/<%= t.id %>" class="btn btn-primary btn-sm">Szczegóły</a></td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    <% } %>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>